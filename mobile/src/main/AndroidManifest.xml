<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.danderson.android_accelerate" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Accelerate"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Camera_Opener"
            android:label="@string/title_activity_camera__opener" >
        </activity>
        <activity
            android:name=".ActivationActivity"
            android:label="@string/title_activity_activation" >
        </activity>

        <service
            android:name=".OpenTheCamera"
            android:exported="false" >
        </service>

        <activity
            android:name=".TakeThePicture"
            android:label="@string/title_activity_take_the_picture" >
        </activity>
        <activity
            android:name=".CreateTweet"
            android:label="@string/title_activity_create_tweet" >
        </activity>
    </application>

</manifest>
